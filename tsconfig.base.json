{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./modules",
    "jsx": "react",
    "lib": [
      "dom",
      "es6",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext.asynciterable"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": true,
    "rootDir": ".",
    "outDir": "./dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "experimentalDecorators": true
  },
  "exclude": ["./dist", "./es", "./data-seed"],
  "include": ["./node_modules/@types/jest"]
}
